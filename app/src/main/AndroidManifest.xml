        <meta-data
            android:name="Mob-AppKey"
            android:value="227b53fc573f0" />
        <meta-data
            android:name="Mob-AppSecret"
            android:value="510b61ab5b9cddc88cc301d7b2b1595f" />

        <activity android:name=".ui.activity.MainActivity" />
        <activity android:name=".ui.activity.OtherLoginActivity" />
        <activity android:name=".ui.activity.WriteActivity" />
        <activity android:name=".ui.activity.PublishActivity" />
        <activity android:name=".ui.activity.UserActivity" />
        <activity android:name=".ui.activity.UpLoadVideosActivity" />
        <activity android:name=".ui.activity.SettingActivity" />
        <activity android:name=".ui.activity.VideoContentActivity" />
        <activity android:name=".ui.activity.RecommendContentActivity"/>
        <activity android:name=".ui.activity.FollowListActivity"/>
    </application>

</manifest>