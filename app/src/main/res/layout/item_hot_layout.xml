<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

  <RelativeLayout
      android:id="@+id/rl"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="@dimen/x120">

      <com.bwie.uploadpicture.view.CircleImageView
          android:id="@+id/iv_head_img"
          android:layout_centerVertical="true"
          android:layout_marginLeft="@dimen/x30"
          android:layout_width="@dimen/x100"
          android:layout_height="@dimen/x100"
          android:src="@mipmap/ic_launcher_round" />

      <LinearLayout
          android:layout_centerVertical="true"
          android:orientation="vertical"
          android:layout_toRightOf="@+id/iv_head_img"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
          <TextView
              android:id="@+id/tv_nickname"
              android:textColor="@color/text_color_red"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/x20"
              android:text="我是昵称" />

          <TextView
              android:id="@+id/tv_date"
              android:textSize="@dimen/x20"
              android:layout_marginLeft="@dimen/x40"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="2017-11-27 20:18" />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/menu_add"
          android:gravity="center"
          android:orientation="horizontal"
          android:layout_centerVertical="true"
          android:layout_marginRight="@dimen/x50"
          android:layout_alignParentRight="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">

          <LinearLayout
              android:id="@+id/ll_pb"
              android:layout_marginTop="@dimen/x10"
              android:visibility="invisible"
              android:gravity="center"
              android:layout_marginLeft="@dimen/x5"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
              <ImageView
                  android:layout_width="@dimen/x70"
                  android:layout_height="@dimen/x70"
                  android:src="@mipmap/shield"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:textSize="@dimen/x25"
                  android:layout_height="wrap_content"
                  android:text="屏蔽"
                  />
          </LinearLayout>

          <LinearLayout
              android:gravity="center"
              android:visibility="invisible"
              android:id="@+id/ll_copy"
              android:layout_marginTop="@dimen/x10"
              android:layout_marginLeft="@dimen/x5"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
              <ImageView
                  android:layout_width="@dimen/x70"
                  android:layout_height="@dimen/x70"
                  android:src="@mipmap/copyurl"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/x25"
                  android:text="复制链接"
                  />
          </LinearLayout>
          <LinearLayout
              android:gravity="center"
              android:id="@+id/ll_jb"
              android:visibility="invisible"
              android:orientation="vertical"
              android:layout_marginTop="@dimen/x10"
              android:layout_marginLeft="@dimen/x5"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
              <ImageView
                  android:layout_width="@dimen/x70"
                  android:layout_height="@dimen/x70"
                  android:src="@mipmap/myreport"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/x25"
                  android:text="举报"
                  />
          </LinearLayout>

          <ImageView
              android:id="@+id/iv_isopenMenu"
              android:layout_marginLeft="@dimen/x20"
              android:layout_width="@dimen/x70"
              android:layout_height="@dimen/x70"
              android:src="@mipmap/add"
              />


      </LinearLayout>


  </RelativeLayout>

    <TextView
        android:id="@+id/tv_message"
        android:layout_marginLeft="@dimen/x30"
        android:layout_below="@+id/rl"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginBottom="@dimen/x20"
        android:textColor="@color/textColor_333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今天天气不错啊"
        />

    <cn.jzvd.JZVideoPlayerStandard
        android:id="@+id/app_video_box"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_below="@+id/tv_message"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x500"></cn.jzvd.JZVideoPlayerStandard>

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="8"
        android:gravity="center"
        android:layout_marginRight="@dimen/x50"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/app_video_box"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x500"
        android:id="@+id/ll_item_sum">
        <ImageView
            android:id="@+id/iv_attention"
            android:layout_weight="1"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:src="@mipmap/sc"
            />
        <TextView
            android:id="@+id/tv_attention"
            android:layout_weight="1"
            android:textColor="@color/textColor_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1232"
            />
        <ImageView
            android:id="@+id/iv_collect"
            android:layout_weight="1"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:src="@mipmap/sfsf"
            />
        <TextView
            android:id="@+id/tv_collect"
            android:layout_weight="1"
            android:textColor="@color/textColor_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="666"
            />
        <ImageView
            android:id="@+id/iv_share"
            android:layout_weight="1"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:src="@mipmap/fx2"
            />
        <TextView
            android:id="@+id/tv_share"
            android:layout_weight="1"
            android:textColor="@color/textColor_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="509"
            />
        <ImageView
            android:id="@+id/iv_comment"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:layout_weight="1"
            android:src="@mipmap/pinglun2" />
        <TextView
            android:id="@+id/tv_comment"
            android:layout_weight="1"
            android:textColor="@color/textColor_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.1万"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_comments"
        android:layout_below="@+id/app_video_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

    <View
        android:layout_below="@+id/rv_comments"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x5"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginBottom="@dimen/x10"
        android:background="@color/colorLineNarrow"
        ></View>


</RelativeLayout>
