<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/write_bg"
    android:layout_height="match_parent"
    tools:context="com.hxe.hxeplatform.ui.activity.WriteActivity">
    <com.hxe.hxeplatform.myview.MyToolBar
        android:id="@+id/mwrite_toolbar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.hxe.hxeplatform.myview.MyToolBar>


    <LinearLayout
        android:layout_below="@+id/mwrite_toolbar"
        android:id="@+id/ll_video"
        android:background="@drawable/shape_create_bg"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/x130"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/x250"
        android:layout_height="@dimen/x250"
        >
        <ImageView
            android:tint="@color/textColor_333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/video_img"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频"
            android:textColor="@color/textColor_333"
            android:textSize="@dimen/x50"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_write"
        android:background="@drawable/shape_create_bg"
        android:layout_below="@+id/ll_video"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/x150"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/x250"
        android:layout_height="@dimen/x250"
        >
        <ImageView
            android:tint="@color/textColor_333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/writer_img"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor_333"
            android:textSize="@dimen/x50"
            android:text="段子"
            />

    </LinearLayout>
</RelativeLayout>
