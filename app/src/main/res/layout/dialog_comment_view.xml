<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/commentColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/dialog_top"
        android:layout_margin="10dp">
        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="评论"
            android:textColorHint="@color/commentTextColor"
            android:textSize="16sp"
            android:padding="5dp"
            android:textColor="@color/commentTextColor"
            android:gravity="top"
            android:background="@null"
            />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/icon_image_4"
                />
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/icon_image_3"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="@drawable/dialog_location"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:textSize="14sp"
                android:textColor="@color/commentTextColor"
                android:layout_gravity="right|center_vertical"
                android:text="点击获取位置"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/comment_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:background="@drawable/dialog_send_btn"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:enabled="false"
            android:textColor="@color/dialog_comment_btn"
            android:layout_gravity="right|center_vertical"
            android:text="发送"
            />
    </FrameLayout>
</LinearLayout>