<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/recyclerview_item"
    android:clickable="true"
    android:gravity="center_vertical"
    android:padding="@dimen/x30"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_img"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x15"
        android:layout_width="@dimen/x50"
        android:layout_height="@dimen/x50"
        />
    <TextView
     android:layout_centerVertical="true"
     android:layout_toRightOf="@+id/iv_item_img"
    android:id="@+id/iv_item_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="好的"
    android:textColor="@color/textColor_333"
        android:textSize="@dimen/x40"
    android:layout_marginLeft="@dimen/x35"
    />

    <ImageView
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x50"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/x40"
        android:layout_height="@dimen/x40"
        android:src="@mipmap/right_jt"
        />
</RelativeLayout>
